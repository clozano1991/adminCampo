<div class="campoYNotas campo_<%=campo.id%>">
    <!-- aca parte la ficha del campo, sin la nota -->
    <div class="campo">
            <div  class="card campo campo_<%=campo.id%>">
                      <!-- aca parte el header del campo -->
                      <div class="card-header campo">
                            <div class="tituloCampoIzquierda">
                                <h5 id="nombre_<%=campo.id%>"><%=campo.nombre%></h5>
                            </div>
                            <!-- estas son las opciones de norrar y editar -->
                            <div class="opcionesCampoDerecha"> 
                                <%= link_to(image_tag("editarAmarillo.png",class: "fotoOpcion"),"#editarCampoModal_#{campo.id}","data-toggle"=>"modal")%>

                                <%=link_to(image_tag("deleteRed.png",class: "fotoOpcion"),  user_campo_path(current_user,campo), method: :delete, data: {confirm: "Â¿Esta seguro/a que quiere borrar este campo?. \nPrecione ok para borrar o cancel para volver atras."}, remote: true)%>
                            </div>
                      </div>
                     <!-- aca parte el body del campo -->
                      <div class="card-body">
                            <h5 id="propietario_<%=campo.id%>">Propietario: <%=campo.propietario%></h5>
                            <h5 id="direccion_<%=campo.id%>">Direccion: <%=campo.direccion%></h5>
                            <h5 id="comentarios_<%=campo.id%>">Comentarios: <%=campo.comentarios%></h5>

                            <div class="botonesCampo">
                                 <%=link_to(button_tag("Huertos", class: "btn btn-primary" ),user_campo_huertos_path(current_user,campo), method: :get  )%>

                                 <%=link_to(button_tag("Contabilidad", class: "btn btn-primary" ),user_campo_huertos_path(current_user,campo), method: :get  )%>

                                 <%=link_to(button_tag("Maquinaria", class: "btn btn-primary" ),user_campo_huertos_path(current_user,campo), method: :get  )%>

                                 <%=link_to(button_tag("Personal", class: "btn btn-primary" ),user_campo_huertos_path(current_user,campo), method: :get  )%>
                            </div>
                      </div>
            </div>
    </div>

    <!-- aca parte la nota que esta a la derecha de la ficha del campo -->
    <div class="nota">
                 <div class="card notaCampo campo_<%=@campo.id%>"  >
                     <div class="card-body">
                             <%=form_for @campo, url: user_campo_path(current_user, campo), method: :put, remote: true do |form| %>
                                 <div class="form-group">
                                     <%=form.label :recordatorio, class: "tituloRecordatorio"%>
                                     <%=form.text_area :recordatorio, value: campo.recordatorio, class: "form-control textField dondeSeEscribeLaNota"%>
                                 </div>
                                 <%=form.submit("Guardar", class: "btn btn-success guardarNota ")%>
                             <%end%> 
                               
                            
                     </div>
                </div>  
    </div>
</div>





<!-- Modal, es el que se usa para editar un campo -->
<div class="modal fade" id="editarCampoModal_<%=campo.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
     
      <div class="modal-body" >
             <div class="card editarCampo">
                 <div class="card-header">
                           <strong><h4>Ficha para editar un Campo</h4></strong>
                 </div>
                 <div class="card-body">
                          <%=form_for @campo, url: user_campo_path(current_user,campo), method: :put, remote: true do |form| %>
                                  <%=form.label :nombre%>
                                  <%=form.text_field :nombre,value: campo.nombre, class: "form-control textField"%>

                                  <%=form.label :propietario%>
                                  <%=form.text_field :propietario,value: campo.propietario, class: "form-control textField"%>

                                  <%=form.label :direccion%>
                                  <%=form.text_field :direccion,value: campo.direccion, class: "form-control textField"%>

                                  <%=form.label :comentarios%>
                                  <%=form.text_area :comentarios,value: campo.comentarios, class: "form-control textField"%>
                                  
                                  <%=form.submit("Confirmar", class: "btn btn-success ", id: "cancelarEditarCampo")%>
                          <%end%>
                                  <%=button_tag("Cancelar", class: "btn btn-danger ")%>            
                  </div>
             </div>
      </div>
    
    </div>
  </div>
</div>