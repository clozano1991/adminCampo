
<div class="filaFichaGenerica usadoEnIndexCampos campo_<%=campo.id%>">
  <!--  ficha izquierda-->
  <div class="fichaCampo">
    <!--  header ficha izquierda-->
    <div class="headerFichaCampo">
      <div class="tituloHeaderFichaCampo">
        <h5><strong><%=campo.nombre%></strong></h5>
      </div>
      <div class="opcionesCampoDerecha"> 
        <%= link_to(image_tag("editarAmarillo.png",class: "fotoOpcion",:data=>{:toggle => "tooltip", :placement => "top", :title => "editar campo"}),"#editarCampoModal_#{campo.id}","data-toggle"=>"modal")%>
        <%=link_to(image_tag("deleteRed.png",class: "fotoOpcion",:data=>{:toggle => "tooltip", :placement => "top", :title => "borrar campo"}),  user_campo_path(current_user,campo), method: :delete, data: {confirm: "¿Esta seguro/a que quiere borrar este campo?. \nPrecione ok para borrar o cancel para volver atras."}, remote: true)%>
      </div>
    </div><!--  fin header ficha izquierda-->
    <!--  body ficha izquierda-->
    <div class="bodyFichaCampo">
      <div class="contenidoSuperiorBodyFichaCampo">
        <div class="contenidoBodyFichaCampoSinBotones">
          <h5 id="propietario_<%=campo.id%>"><strong>Propietario:</strong> <%=campo.propietario%></h5>
        </div>
        <div class="contenidoBodyFichaCampoSinBotones">
          <h5 id="direccion_<%=campo.id%>"><strong>Direccion:</strong> <%=campo.direccion%></h5>
        </div>
        <div class="contenidoBodyFichaCampoSinBotones">
          <h5 id="comentarios_<%=campo.id%>"><strong>Descripción: </strong> <%=campo.comentarios%></h5>
        </div>
      </div>
      <div class="botonesBodyFichaCampo">
        <%=link_to(button_tag("Huertos", class: "btn botonAzul botonFichaCampo" ),user_campo_huertos_path(current_user,campo), method: :get  )%>
        <%=link_to(button_tag("Contabilidad", class: "btn botonAzul botonFichaCampo" ),user_campo_huertos_path(current_user,campo), method: :get  )%>
        <%=link_to(button_tag("Maquinaria", class: "btn botonAzul botonFichaCampo" ),user_campo_huertos_path(current_user,campo), method: :get  )%>
        <%=link_to(button_tag("Personal", class: "btn botonAzul botonFichaCampo" ),user_campo_empleados_path(current_user,campo), method: :get  )%>
      </div>    
    </div><!--  fin body ficha izquierda-->
  </div><!-- fin ficha izquierda-->

  <!--  ficha derecha-->
  <div class="fichaCampoRecordatorio">
    <!--  header ficha derecha-->
    <div class="headerFichaCampoRecordatorio">
      <h6><strong>Notas:</strong></h6>  
      <%=image_tag("ticketVerde.png",class: "fotoOpcion ticketGuardarCambiosRecordatorioCampo",:data=>{:toggle => "tooltip", :placement => "top", :title => "guardar cambios"})%>
    </div><!-- fin header ficha derecha-->
    <!--  body ficha derecha-->
    <div class="bodyFichaCampoRecordatorio">
      <%=form_for @campo, url: user_campo_path(current_user, campo), method: :put, remote: true do |form| %>
          <div class="form-group">
              <%=form.text_area :recordatorio, value: campo.recordatorio, class: "form-control  dondeSeEscribeLaNota"%>
          </div>
      <%end%>   
    </div><!-- fin body ficha derecha-->
  </div><!--  fin ficha recordatorio-->
</div>







<!-- Modal, es el que se usa para editar un campo -->
<div class="modal fade" id="editarCampoModal_<%=campo.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
     
      <div class="modal-body" >
             <div class="card editarCampo">
                 <div class="card-header">
                           <strong><h4>Ficha para editar un Campo</h4></strong>
                 </div>
                 <div class="card-body">
                          <%=form_for @campo, url: user_campo_path(current_user,campo), method: :put, remote: true do |form| %>
                                  <%=form.label :nombre%>
                                  <%=form.text_field :nombre,value: campo.nombre, class: "form-control textField"%>

                                  <%=form.label :propietario%>
                                  <%=form.text_field :propietario,value: campo.propietario, class: "form-control textField"%>

                                  <%=form.label :direccion%>
                                  <%=form.text_field :direccion,value: campo.direccion, class: "form-control textField"%>

                                  <%=form.label :comentarios%>
                                  <%=form.text_area :comentarios,value: campo.comentarios, class: "form-control textField"%>
                                  
                                  <%=form.submit("Confirmar", class: "btn btn-success ", id: "cancelarEditarCampo")%>
                          <%end%>
                                  <%=button_tag("Cancelar", class: "btn btn-danger ")%>            
                  </div>
             </div>
      </div>
    
    </div>
  </div>
</div>

