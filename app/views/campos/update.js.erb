$(document).ready(function(){

	$("#modal_editar_campo_<%=@campo.id%>").modal("hide");

	// mostramos los nuevos valores que se guardaron al editar el campo 
    $("#nombreCampo_<%=@campo.id%>").text("<%=@campo.nombre%>");
    $("#nombreCampo_<%=@campo.id%>").css("font-weight","bold");
    $("#propietarioCampo_<%=@campo.id%>").text("<%=@campo.propietario%>");
    $("#direccionCampo_<%=@campo.id%>").text("<%=@campo.direccion%>");
    $("#descripcionCampo_<%=@campo.id%>").text("<%=@campo.descripcion%>");
});