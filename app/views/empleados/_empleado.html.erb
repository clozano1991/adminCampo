<!-- esta parte se ejecutara solo cuando queremos poner los modals para confirmar el borrado -->
<%if @adentroContenedorModalsBorrarEmpleado == true%>
  <div class="modal fade modalParaBorrarEmpleado" id="modal_borrar_empleado_<%=empleado.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
    <div class="modal-dialog" role="document">
      <div class="modal-content modalParaHuerto">
        <div class="modal-header">
             <h5>
                <strong>Personal:<%=empleado.nombre%> <%=empleado.apellidos%></strong>
             </h5>
             <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-toggle="tooltip" data-placement="top" data-title="cerrar ventana">
                   <span aria-hidden="true">&times;</span>
              </button>
        </div>
        <div class="modal-body">
                  <h5>
                    ¿Seguro que desea borrar todos los datos asociados a esta persona?
                  </h5>
                    <%=link_to(button_tag("Borrar Personal", class: "btn botonRojo botonConfirmarBorrarEmpleado"), user_campo_empleado_path(current_user,campo,empleado), method: :delete, remote: true )%>
        </div>
      </div>
    </div>
  </div>
<%end%><!-- fin modal para borrar empleado -->
