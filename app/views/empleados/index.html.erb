
<div id="contenedorFondoIndexEmpleados">

  <div class="opcionesArribaEmpleadosIndex">
    <div id="">
      <h5><strong> Personal del campo: <%=@campo.nombre%></strong></h5>
      
    </div>
    <div id="indexPersonalBotonesOpcionesSuperiores">
              <%=link_to(button_tag("+ Personal", class: "btn botonNaranjo botonOpcionesSuperioresIndexEmpleados" ),new_user_campo_empleado_path(current_user,@campo), method: :get  )%>
              <%=link_to(button_tag("Multipago", class: "btn botonNaranjo botonOpcionesSuperioresIndexEmpleados" ),new_user_campo_empleado_path(current_user,@campo), method: :get  )%>
    </div>
  </div>

  <div id="contenedorEmpleados">
    <table class="table table-striped table-bordered" id="tablaDondeSeMuestranLosEmpleados">
      <thead>
        <tr class="filaSuperiorTablaEmpleados">
          <th class="subTituloTablaEmpleado" scope="col">Nombre</th>
          <th class="subTituloTablaEmpleado" scope="col">Contacto</th>
          <th class="subTituloTablaEmpleado" scope="col">Cargo</th>
          <th class="subTituloTablaEmpleado" scope="col">Sueldo base</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
          <% @adentroTablaEmpleado = true %>
          <%=render partial: "empleado", collection: @empleados, locals: {campo: @campo}%>
          <% @adentroTablaEmpleado = false %>
      </tbody>
    </table>
  </div>

</div><!--fin contenedorFondoIndexEmpleados-->


